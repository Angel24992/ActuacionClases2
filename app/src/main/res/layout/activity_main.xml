<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#A7F3D8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actuacion en clase 2"
        android:textSize="30dp"
        android:textColor="#3F51B5"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/ingreseNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="Ingrese un nÃºmero"
        android:textSize="20dp"
        android:textColorHint="#42700D"
        android:textColor="#043706"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evaluar"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Respuesta"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColorHint="#FF5722"
        android:textColor="#AC320C"/>

</androidx.appcompat.widget.LinearLayoutCompat>